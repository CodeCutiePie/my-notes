source "https://rubygems.org"

#=================================[=] Menggunakan Jekyll
gem "jekyll", "~> 4.3.4"
gem "jekyll-seo-tag" # Untuk optimasi SEO
gem "webrick"

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
  gem "jekyll-toc"
end

#=================================[=] Tambahkan gem lain sesuai kebutuhan
# gem "kramdown" # Untuk pengolahan markdown (biasanya sudah termasuk di Jekyll)
# gem "dotenv" # Untuk variabel lingkungan

#=================================[=] Pastikan untuk menginstal bundler jika belum
gem "bundler"
gem "sassc-rails"
gem "sassc"
gem "html-proofer" # Untuk memeriksa kesalahan HTML 